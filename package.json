{
  "name": "hotel-booking-management",
  "private": true,
  "version": "0.0.0",
  "main": "src/main/index.js",
  "build": {
    "appId": "com.CyberArcenal.hotelbooking.app",
    "productName": "HotelBookingManagement Lite",
    "directories": {
      "output": "release"
    },
    "win": {
      "icon": "build/icon.ico",
      "target": "nsis"
    },
    "mac": {
      "icon": "build/icon.icns"
    },
    "linux": {
      "icon": "build/icon.png"
    },
    "publish": [
      {
        "provider": "github",
        "owner": "CyberArcenal",
        "repo": "Hotel-Booking-Management"
      }
    ]
  },
  "scripts": {
    "build:main": "tsc -p tsconfig.main.json",
    "vite": "vite",
    "electron": "electron ./src/main/index.js",
    "rebuild": "electron-rebuild -f -w sqlite3",
    "seed:clear": "node src/seeders/seedData.js --clear-only",
    "seed:rooms": "node src/seeders/seedData.js --skip-guests --skip-bookings --skip-audit-logs --skip-system-settings",
    "dev": "cross-env NODE_ENV=development concurrently \"vite\" \"electron ./src/main/index.js\"",
    "build": "vite build && electron-builder",
    "electron:dev": "electron ./src/main/index.js",
    "electron:build": "electron-builder",
    "migration:generate": "npx typeorm migration:generate src/migrations/InitSchema -d src/main/db/datasource.js --outputJs",
    "migration:run": "typeorm migration:run -d ./src/db/datasource.js",
    "migration:revert": "typeorm migration:revert -d ./src/db/datasource.js",
    "seed": "node src/seeders/seedData.js",
    "seed:reset": "node src/seeders/seedData.js --reset",
    "lint": "eslint .",
    "preview": "vite preview",
    "postinstall": "electron-rebuild"
  },
  "dependencies": {
    "csv-parse": "^6.1.0",
    "decimal.js": "^10.6.0",
    "escpos": "^3.0.0-alpha.6",
    "escpos-usb": "^3.0.0-alpha.4",
    "lucide-react": "^0.563.0",
    "nodemailer": "^8.0.1",
    "p-queue": "^9.1.0",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "react-router-dom": "^7.12.0",
    "recharts": "^3.7.0",
    "reflect-metadata": "^0.2.2",
    "sqlite3": "^5.0.2",
    "twilio": "^5.12.1",
    "typeorm": "^0.3.28"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@tailwindcss/vite": "^4.1.18",
    "@types/node": "^24.10.1",
    "@types/react": "^19.2.5",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react": "^5.1.1",
    "concurrently": "^9.2.1",
    "cross-env": "^10.1.0",
    "electron": "^40.4.0",
    "electron-builder": "^26.7.0",
    "electron-rebuild": "^3.2.9",
    "eslint": "^9.39.1",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-react-refresh": "^0.4.24",
    "globals": "^16.5.0",
    "typescript": "~5.9.3",
    "typescript-eslint": "^8.46.4",
    "vite": "^7.2.4"
  }
}
